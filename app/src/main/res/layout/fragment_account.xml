<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#E7E7EA"
        android:layout_height="798dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:background="@drawable/round_corner_button">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                app:tint="@color/purple_500"
                android:layout_gravity="left"
                android:src="@drawable/bg_person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="70dp"
                android:text="Welcome .."
                android:textAlignment="viewStart"
                android:textColor="#353535"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvcallemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="100dp"
                android:textAlignment="viewStart"
                android:textColor="#353535"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="419dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCemail"
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/round_corner_button"
                    android:layout_marginTop="12dp"
                    android:text="Change Email"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/chemail_foreground"
                    app:tint="@color/purple_500" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvCpassw"
                android:background="@drawable/round_corner_button"
                android:layout_width="match_parent"
                app:tint="@color/purple_500"
                android:layout_height="54dp"
                android:layout_marginTop="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="12dp"
                    android:text="Change Password"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:tint="@color/purple_500"
                    android:src="@drawable/chpassw_foreground" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvLogout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@drawable/round_corner_button"
                android:layout_marginTop="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="12dp"
                    android:text="Log Out"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    app:tint="@color/purple_500"
                    android:src="@drawable/logout_foreground" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>